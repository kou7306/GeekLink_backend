datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

model Users {
  user_id          String   @id @default(uuid())
  created_at       DateTime @default(now())
  name             String
  sex              String
  age              String
  place            String
  top_teches       String[]
  teches           String[]
  hobby            String?
  occupation       String
  affiliation      String?
  qualification    String[]
  editor           String?
  github           String?
  twitter          String?
  qiita            String?
  zenn             String?
  atcoder          String?
  message          String?
  updated_at       DateTime @updatedAt
  portfolio        String?
  graduate         String?
  desired_occupation String?
  faculty          String?
  experience       String[]
  image_url        String?
}

model Message {
  id              String   @id @default(uuid())
  created_at      DateTime @default(now())
  sender_id       String
  receiver_id     String
  content         String
  room_id         String
}

model Match {
  id         Int       @id @default(autoincrement())
  created_at DateTime  @default(now())
  user1_id   String
  user2_id   String
  room_id    String    @default(dbgenerated("gen_random_uuid()"))
}

model Like {
  id          Int      @id @default(autoincrement())
  created_at  DateTime @default(now())
  liked_user_id String
  user_id     String
}

model Group {
  id              String   @id @default(uuid())
  owner_id        String
  member_ids      String[]
}
